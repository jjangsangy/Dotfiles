# ~/.curlrc

# Display Moving Progress Bar
progress-bar

# Dont waste time waiting on connection
connect-timeout = 3

# Failed download fails everything
fail-early

# Follow redirects
location

# Print Error
show-error

# mkdir -p
create-dirs

# h2 is here
http2

# Print response headers to stdout
dump-header = -

# Go fast
tcp-fastopen

# Speed download through compression
compressed
tr-encoding

# Retry with dely
retry = 5

# When following a redirect, automatically set the previous URL as referer
referer = ";auto"

# User is MacOS 10.12.5 Sierra
user-agent = "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_5) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/59.0.3071.115 Safari/537.36"

# Print some stats on download completion
write-out = "\n Code: %{http_code}\n  URL: %{url_effective}\n File: %{filename_effective}\n Time: %{time_total} seconds \nSpeed: %{speed_download} bytes/second\n\n########################################################################\n\n"
