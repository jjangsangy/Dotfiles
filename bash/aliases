# vi: ft=sh

alias grep='command grep --color=auto'
alias homebrew='brew update && brew upgrade && brew cleanup'

alias ls='command ls'
alias l='command ls -lF --color=auto'
alias ls='command ls -F --color=auto'

alias pstree='command pstree -g 2 -w'


# Display open sockets
alias lsock='lsof -i -P'

# Run remote SOCKS proxy daemon
alias socks='ssh -D 9999 -f -C -q -N'

# hidden network command line utilities
alias networksetup='/System/Library/CoreServices/RemoteManagement/ARDAgent.app/Contents/Support/networksetup'
alias systemsetup='/System/Library/CoreServices/RemoteManagement/ARDAgent.app/Contents/Support/systemsetup'
alias ardkickstart='/System/Library/CoreServices/RemoteManagement/ARDAgent.app/Contents/Resources/kickstart'
alias airport='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'

# Chrome
alias chrome='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome/'
alias chromecanary='/Applications/Google Chrome Canary.app/Contents/MacOS/Google Chrome Canary'

# Virtualization
alias vmrun='/Applications/VMware\ Fusion.app/Contents/Library/vmrun'

alias google-chrome='/Applications/Google Chrome.app/Contents/MacOS/Google Chrome'


# Git Hub
if hash hub 2>/dev/null; then
    alias git='hub'
fi

# Atom
if [ -n "$(which atom-beta)" ]; then
    alias atom='atom-beta'
    alias apm='apm-beta'
fi

# Virtualbox
alias vbox='VBoxManage' && complete -o default -F _VBoxManage vbox

function mpv-sort() {
    local ARGS=( $@ )
    find "${ARGS[@]:-'.'}" \
        -d 1 \
        -type f \( -name "*avi" -o -name "*mp4" -o -name "*wmv" -o -name "*mkv" \) \
        -exec du -hma '{}' \; \
    | sort -rn \
    | cut -d $'\t' -f 2 \
    | sed 's/\(.*\)/"\1"/g' | xargs mpv
}
