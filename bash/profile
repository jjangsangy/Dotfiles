if [[ -e ${HOME}/.path ]]; then
    . ${HOME}/.path
fi

if [[ -e ${HOME}/.aliases ]]; then
    . ${HOME}/.aliases
fi

if [[ -e ${HOME}/.prompt.sh ]]; then
    . ${HOME}/.prompt.sh
fi

if [[ -e ${HOME}/.jump.sh ]]; then
    . ${HOME}/.jump.sh
fi

if [[ -e $HOME/.dircolors ]] && $(which dircolors) > /dev/null; then
    export LSCOLORS='--color=auto'
    eval `dircolors $HOME/.dircolors`

    # Adds ability to call on dark or light specific dircolors
    if [[ -e $HOME/.dircolors_dark ]]; then
        dark() {
            # Calls the solarized dark specific dircolors for use
            eval `dircolors $HOME/.dircolors_dark`
        }
    fi

    if [[ -e $HOME/.dircolors_light ]]; then
        light() {
            # Calls the solarized light specific dircolors for use
            eval `dircolors $HOME/.dircolors_light`
        }
    fi
else
    export CLICOLOR=1
    export LSCOLORS=Exfxcxdxbxegedabagacad
fi

#[ENVAR]
export GREP_OPTIONS='--color=auto'
export PATH=/usr/local/bin:${HOME}/bin:$PATH

#[Functions]
function red() {
  RED=$(tput setaf 1)
  NORMAL=$(tput sgr0)
  echo -e "$RED$*$NORMAL"
}

function green() {
  GREEN=$(tput setaf 2)
  NORMAL=$(tput sgr6)
  echo -e "$GREEN$*$NORMAL"
}

function yellow() {
  YELLOW=$(tput setaf 3)
  NORMAL=$(tput sgr0)
  echo -e "$YELLOW$*$NORMAL"
}

function ds () {
	echo "Disk Space Utilization for $HOSTNAME"
	df -h
}
