# Dotfiles Entrypoint

set -o emacs \
       errtrace \
       functrace \
       hashall \
       histappend \
       history \
       interactive-comments \
       monitor \
       onecmd

# keep command history
shopt -s cmdhist

# dont autorun commands from history
shopt -s histverify

# correct mispellings
shopt -s cdspell


if [ -r "${HOME}/.bash_sources" ] && [ ${BASH_VERSINFO} -ge 4 ]; then
    source "${HOME}/.bash_sources"
fi

# vi: ft=sh
